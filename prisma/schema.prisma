generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TipoProducto {
  id     Int    @id @default(autoincrement())
  nombre String @unique
  productos Producto[]
}
model Unidad {
  id     Int    @id @default(autoincrement())
  nombre String @unique
  simbolo String
  medidas Medida[]
}
model Medida {
  id        Int    @id @default(autoincrement())
  cantidad  Int
  unidadId  Int
  unidad    Unidad @relation(fields: [unidadId], references: [id])
  @@unique([cantidad, unidadId])
  productos Producto[]
}

model Producto{
  id             Int          @id @default(autoincrement())
  descripcion    String
  precio         Float
  tipoProductoId Int
  tipoProducto   TipoProducto @relation(fields: [tipoProductoId], references: [id])
  medidaId       Int
  medida         Medida       @relation(fields: [medidaId], references: [id])
}