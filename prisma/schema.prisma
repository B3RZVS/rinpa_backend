generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TipoProducto {
  id     Int    @id @default(autoincrement())
  nombre String @unique
}
model Unidad {
  id     Int    @id @default(autoincrement())
  nombre String @unique
  simbolo String
  medidas Medida[]
}
model Medida {
  id        Int    @id @default(autoincrement())
  cantidad  Int
  unidadId  Int
  unidad    Unidad @relation(fields: [unidadId], references: [id])
  @@unique([cantidad, unidadId])
}